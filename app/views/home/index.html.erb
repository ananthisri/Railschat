<div class="row">
	<br/><br/><br/><br/>
	<div class="col-md-3">
		<div class="panel panel-default">
			<div class="panel-heading panel-heading-custom" >
				<h2 class="panel-title">Direct Messages </h2>
			</div>
			<div class="panel-body">
				<ul>
					<% @users.each do |user| %>
					 
					 <li >	
					 <%= link_to user.username, 
					 conversations_path(user_id: user), style:"font-size: 20px; color:#000000;" ,remote: true, method: :post %></li>
					<% end %>
					
				</ul>
			</div>
		</div>	
	</div>
	<div class="col-md-9">
		<% if flash[:notice] %>
		<div class="notice"><%= flash[:notice] %></div>
		<% end %>
		
		<ul id="conversations-list">
				
			<% @conversations.each do |conversation| %>

				<%= render 'conversations/conversation', conversation: conversation, user: current_user %>
			<% end %>

		</ul>
	</div>

	</div>


